{
	"name": "fifa-world-cup",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "fifa_data_input",
						"type": "DatasetReference"
					},
					"name": "fifaworldcupinput"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "aggregate1"
				},
				{
					"name": "filter1",
					"description": "Add expression for the filter"
				},
				{
					"name": "filter2"
				},
				{
					"name": "filter3"
				},
				{
					"name": "aggregate2"
				},
				{
					"name": "aggregate3"
				}
			],
			"scriptLines": [
				"source(output(",
				"          date as string,",
				"          home_team as string,",
				"          away_team as string,",
				"          home_team_continent as string,",
				"          away_team_continent as string,",
				"          home_team_fifa_rank as string,",
				"          away_team_fifa_rank as string,",
				"          home_team_total_fifa_points as string,",
				"          away_team_total_fifa_points as string,",
				"          home_team_score as string,",
				"          away_team_score as string,",
				"          tournament as string,",
				"          city as string,",
				"          country as string,",
				"          neutral_location as string,",
				"          shoot_out as string,",
				"          home_team_result as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> fifaworldcupinput",
				"filter1 aggregate(groupBy(home_team),",
				"     total_win = count(home_team)) ~> aggregate1",
				"fifaworldcupinput filter(home_team_result==\"Win\") ~> filter1",
				"fifaworldcupinput filter(home_team_result==\"Lose\") ~> filter2",
				"fifaworldcupinput filter(home_team_result==\"Draw\") ~> filter3",
				"filter2 aggregate(groupBy(home_team),",
				"     total_lose = count(home_team_result)) ~> aggregate2",
				"filter3 aggregate(groupBy(home_team),",
				"     total_draw = count(home_team_result)) ~> aggregate3"
			]
		}
	}
}