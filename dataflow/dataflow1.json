{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "madhurinputdataset",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "TotalDrawlDataset",
						"type": "DatasetReference"
					},
					"name": "totaldraw"
				}
			],
			"transformations": [
				{
					"name": "homewin1"
				},
				{
					"name": "aggregate2"
				},
				{
					"name": "homoloss2"
				},
				{
					"name": "homeloss"
				},
				{
					"name": "homedraw"
				},
				{
					"name": "homedraw1"
				},
				{
					"name": "awaydraw1"
				},
				{
					"name": "join1"
				},
				{
					"name": "derivedColumn1"
				},
				{
					"name": "finaldraw"
				},
				{
					"name": "drawfinal"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          date as string,",
				"          home_team as string,",
				"          away_team as string,",
				"          home_team_continent as string,",
				"          away_team_continent as string,",
				"          home_team_fifa_rank as string,",
				"          away_team_fifa_rank as string,",
				"          home_team_total_fifa_points as string,",
				"          away_team_total_fifa_points as string,",
				"          home_team_score as string,",
				"          away_team_score as string,",
				"          tournament as string,",
				"          city as string,",
				"          country as string,",
				"          neutral_location as string,",
				"          shoot_out as string,",
				"          home_team_result as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     limit: 25000,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 filter(home_team_result==\"Draw\") ~> homewin1",
				"homewin1 aggregate(groupBy(home_team),",
				"     homewincount = count(home_team)) ~> aggregate2",
				"source1 filter(home_team_result==\"Lose\") ~> homoloss2",
				"homoloss2 aggregate(groupBy(home_team),",
				"     total_lose = count(home_team)) ~> homeloss",
				"source1 filter(home_team_result==\"Draw\") ~> homedraw",
				"homedraw aggregate(groupBy(home_team),",
				"     home_draw = count(home_team)) ~> homedraw1",
				"homedraw aggregate(groupBy(away_team),",
				"     away_draw = count(away_team)) ~> awaydraw1",
				"awaydraw1, homedraw1 join(away_team == home_team,",
				"     joinType:'outer',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1 derive(total_draw = iif( isNull(home_draw), 0l , home_draw) + iif( isNull(away_draw), 0l , away_draw)) ~> derivedColumn1",
				"derivedColumn1 select(mapColumn(",
				"          final_draw = home_team,",
				"          total_draw,",
				"          away_team",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> finaldraw",
				"finaldraw derive(draw_final = iif(isNull(final_draw), away_team, final_draw)) ~> drawfinal",
				"drawfinal select(mapColumn(",
				"          draw_final,",
				"          total_draw",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          date as string,",
				"          home_team as string,",
				"          away_team as string,",
				"          home_team_continent as string,",
				"          away_team_continent as string,",
				"          home_team_fifa_rank as string,",
				"          away_team_fifa_rank as string,",
				"          home_team_total_fifa_points as string,",
				"          away_team_total_fifa_points as string,",
				"          home_team_score as string,",
				"          away_team_score as string,",
				"          tournament as string,",
				"          city as string,",
				"          country as string,",
				"          neutral_location as string,",
				"          shoot_out as string,",
				"          home_team_result as string",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> totaldraw"
			]
		}
	}
}